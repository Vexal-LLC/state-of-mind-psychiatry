---
import { Image } from "astro:assets";
import brainPuzzle from "../assets/brain-puzzle.svg";
import Pill from "~/components/Pill.astro";
import { Icon } from "astro-icon/components";
import FullWidthContainer from "~/components/FullWidthContainer.astro";
---

<div class="relative isolate">
  <div class="overflow-hidden">
    <FullWidthContainer class="my-16">
      <div
        class="mx-auto max-w-2xl gap-x-14 lg:mx-0 md:flex md:max-w-none md:items-start md:justify-between"
      >
        <!-- Left content -->
        <div
          class="relative w-full lg:max-w-xl lg:shrink-0 xl:max-w-2xl h-full"
        >
          <div class="flex">
            <div class="group">
              <Pill variant="light">
                Trusted by our clients.
                <button
                  class="ml-1 inline-flex items-center font-semibold text-primary/90 transition-colors hover:text-primary-dark"
                  onclick="e => e.preventDefault(); document.getElementById('success-stories').scrollIntoView({ behavior: 'smooth' })"
                >
                  See&nbsp;
                  <span class="hidden md:inline">success stories</span>
                  <span class="inline md:hidden">testimonials</span>
                  <Icon
                    name="mdi:arrow-right"
                    class="ml-[0.125rem] h-4 w-4 transition-transform group-hover:translate-x-1"
                  />
                </button>
              </Pill>
            </div>
          </div>
          <h1
            class="mt-8 text-pretty font-serif text-6xl md:text-7xl lg:text-8xl font-bold tracking-tight text-gray-900"
          >
            Transform <span
              class="inline-block text-secondary highlight-secondary-light highlight-h-20 highlight-opacity-40 highlight-rounded-md highlight-behind"
              >Struggles</span
            > into
            <span
              class="inline-block text-secondary highlight-secondary-light highlight-h-20 highlight-opacity-40 highlight-rounded-md highlight-behind"
              >Strengths</span
            >
          </h1>
          <div class="relative mt-8">
            <p
              class="text-pretty text-lg font-normal text-gray-700 sm:text-xl relative"
            >
              Expert outpatient mental health care that adapts to your unique
              journey. Our comprehensive approach helps you build a stronger,
              more resilient future and <span class="font-semibold"
                >State of Mind</span
              >.
            </p>
          </div>
          <div class="mt-10 flex items-center gap-x-6">
            <button
              onclick="openModal()"
              class="inline-flex items-center px-6 py-3 rounded-full text-md font-medium bg-black text-white hover:bg-primary-light group transition-all duration-200 hover:shadow-lg hover:-translate-y-1"
            >
              Schedule Now
            </button>
            <a
              href="/about"
              class="group relative text-md font-semibold text-gray-900"
            >
              Get to know us
              <Icon
                name="mdi:arrow-right"
                class="inline-block ml-1 h-4 w-4 transition-transform group-hover:translate-x-1"
              />
              <span
                class="absolute -bottom-1 left-0 h-[3px] w-full origin-left scale-x-0 bg-accent-orange transition-transform duration-200 group-hover:scale-x-100"
              ></span>
            </a>
          </div>
        </div>

        <!-- Modify the right side image to only show on large screens -->
        <div class="hidden md:block">
          <Image
            src={brainPuzzle}
            width={1024}
            height={1440}
            loading="lazy"
            decoding="async"
            alt="Mind illustration"
            class="relative aspect-[3/4] w-full max-w-md mx-auto rounded-xl object-cover"
          />
        </div>
      </div>
    </FullWidthContainer>
  </div>
</div>
