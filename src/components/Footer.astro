---
import { Icon } from "astro-icon/components";
---

<footer
  class="bg-white"
  aria-hidden="false"
  aria-label="Footer"
  role="navigation"
>
  <!-- Main Footer Content -->
  <div class="w-full overflow-hidden bg-zinc-900 px-6 py-12">
    <div class="mx-auto max-w-7xl">
      <!-- Top Section with Logo and Navigation -->
      <div
        class="flex flex-col items-center lg:items-start lg:flex-row lg:justify-between gap-8 mb-16 text-center lg:text-left"
      >
        <!-- Logo Section -->
        <div class="text-white text-xl font-sans">State of Mind Psychiatry</div>

        <!-- Navigation Links -->
        <nav class="flex flex-wrap gap-x-8 gap-y-3" aria-label="Footer">
          <a href="/" class="text-gray-300 hover:text-white transition-colors"
            >Home</a
          >
          <a
            href="/about"
            class="text-gray-300 hover:text-white transition-colors">About</a
          >
          <a
            href="/services"
            class="text-gray-300 hover:text-white transition-colors">Services</a
          >
          <a
            href="/contact"
            class="text-gray-300 hover:text-white transition-colors">Contact</a
          >
        </nav>
      </div>

      <!-- Book Now CTA Section -->
      <div class="border border-zinc-600 rounded-3xl p-8 mb-16">
        <div
          class="flex flex-col lg:flex-row items-center justify-between gap-8"
        >
          <div class="text-center lg:text-left">
            <h2 class="text-white text-2xl lg:text-3xl font-serif mb-2">
              Start
              <span class="text-accent-yellow-light relative">
                Your Journey
                <span
                  class="absolute -bottom-1 left-0 h-1 w-full bg-accent-yellow/20"
                ></span>
              </span>
              <span class="relative"> Today</span>
            </h2>
            <p class="text-gray-400">
              Schedule your consultation with our experienced team
            </p>
          </div>
          <a
            href="/contact"
            class="inline-flex items-center px-6 py-3 rounded-full font-semibold bg-accent-yellow text-black hover:bg-accent-yellow-light hover:text-black/80 group transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
          >
            Book Appointment
            <Icon
              name="material-symbols:arrow-forward"
              class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1"
            />
          </a>
        </div>
      </div>

      <!-- Bottom Section -->
      <div
        class="flex flex-col items-center lg:items-start lg:flex-row lg:justify-between gap-8 text-center lg:text-left"
      >
        <!-- Social Links -->
        <div class="flex justify-center gap-6">
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">Twitter</span>
            <Icon name="mdi:twitter" class="w-6 h-6" />
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">Instagram</span>
            <Icon name="mdi:instagram" class="w-6 h-6" />
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">LinkedIn</span>
            <Icon name="mdi:linkedin" class="w-6 h-6" />
          </a>
        </div>

        <!-- Copyright -->
        <p class="text-gray-400 text-sm text-center lg:text-left">
          Â© {new Date().getFullYear()} State of Mind Psychiatry, LLC. All Rights
          Reserved
        </p>

        <!-- Footer Links -->
        <div class="flex justify-center gap-6">
          <a
            href="/privacy"
            class="text-gray-400 hover:text-white transition-colors text-sm"
            >Privacy</a
          >
          <a
            href="/sitemap"
            class="text-gray-400 hover:text-white transition-colors text-sm"
            >Sitemap</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>
