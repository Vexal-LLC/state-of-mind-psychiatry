---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <main
    class="flex flex-col items-center justify-center h-full px-4 py-32"
    aria-hidden="false"
    aria-label="Main content"
    role="main"
  >
    <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
    <h2 class="text-2xl font-semibold text-gray-700 mb-6">Page Not Found</h2>
    <p class="text-gray-600 text-center mb-8 max-w-md">
      We're sorry, but the page you're looking for doesn't exist or has been
      moved.
    </p>
    <a href="/" class="text-primary underline"> Return Home </a>
  </main>
</Layout>
